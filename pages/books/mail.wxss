/* pages/books/mail.wxss */
.whole-page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}

.line-text {
  text-align: left;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 50rpx 0rpx 50rpx;
  font-size: 35rpx;
  line-height: 90rpx;
  height: 90rpx;
}

.section {
  width: 100%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 0rpx 50rpx;
}

.section input {
  font-size: 35rpx;
  line-height: 90rpx;
  height: 90rpx;
  box-sizing: border-box;
  padding: 0rpx;
  border-bottom: 1px solid #EEEEEE;
  
}
.input-code {
  width: calc(100vw - 400rpx);
}
.input-long {
  width: 100%;
}

.verify-code {
  position: absolute;
  right: 50rpx;
  width: 250rpx;

  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 0;
}
.verify-code::after {
  border-width: 0;
}

.submit-button-line {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
}
.submit-button {
  width: 100%; 
}

.btn-style{
  font-size: 35rpx;
  line-height: 110rpx;
  border-radius: 0;
}

.btn-style::after {
  border-width: 0;
}
