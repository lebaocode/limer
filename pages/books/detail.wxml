<!--pages/books/detail.wxml-->
<scroll-view scroll-y class="whole-page">
  <view class="book-item">
    <view class="book-cover"><image class="book-cover-img" src="{{book.image}}" /></view>
    <view class="book-info">
      <view class="book-title">{{book.title}}</view>
      <view class="book-author">{{book.author}}</view>
    </view>
  </view>

  <view class="book-detail">
    <view class="column-title">图书详情</view>
    <view class="column-content"><text>{{book.summary}}</text></view>

    <view class="column-title">作者简介</view>
    <view class="column-content"><text>{{book.author_intro}}</text></view>

    <view class="column-title">图书目录</view>
    <view class="column-content"><text>{{book.catalog}}</text></view>
  </view>
</scroll-view>

<view class="bottombar">
  <view class="bottom-text" wx:if="{{bookStoreNum > 0}}">当前库存 {{bookStoreNum}} 本</view>
  <view class="bottom-text" wx:else>此书暂无库存</view>

  <view class="bottom-button">
    <button wx:if="{{book.status == 1}}" class="btn-style" bindtap="submitBorrow">我要借阅</button>
    <button wx:elif="{{book.status == 3}}" class="btn-inactive-style">借阅中</button>
    <button wx:else class="btn-style" bindtap="submitOrder">我要预约</button>
  </view>
</view>
