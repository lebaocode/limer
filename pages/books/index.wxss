/* pages/books/index.wxss */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.cat-nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0rpx 50rpx 0rpx 110rpx;
  white-space: nowrap;
}

.search-icon {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 33rpx;
  left: 50rpx;
}

.cat-item {
  font-size: 35rpx;
  line-height: 90rpx;
  height: 90rpx;
  margin: 0rpx 20rpx;
  color: #000;
  display: inline-block;
  box-sizing: border-box;
}

.cat-item-selected {
  display: inline-block;
  font-size: 35rpx;
  line-height: 90rpx;
  height: 90rpx;
  margin: 0rpx 20rpx;
  color: #AFCB21;
  border-bottom: 1px solid #AFCB21;
  box-sizing: border-box;
}

.book-list {
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.book-item {
  height: 280rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-top: 1rpx solid #EEEEEE;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
}

.book-cover {
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.book-cover-img {
  width: 200rpx;
  height: 200rpx;
}

.book-title {
  font-size: 35rpx;
  color: #000;
  line-height: 55rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.book-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
}

.book-author {
  font-size: 30rpx;
  color: #999;
  line-height: 50rpx;
  width: 100%;
  margin-top: 5rpx;
}

.hint-nobook {
  font-size: 35rpx;
  color: #999;
  width: 100%;
  text-align: center;
  padding: 100rpx 50rpx;
  box-sizing: border-box;
  
}