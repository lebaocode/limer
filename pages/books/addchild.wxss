/* pages/books/addchild.wxss */
.bg {
  background-color: #FFF;
  width: 100%;
  height: calc(100vh);
  padding: 0rpx 50rpx;
}

.pre-hint {
  font-size: 30rpx;
  color: #999;
  margin:30rpx 0rpx;
}

.input-text {
  box-sizing: border-box;
  
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  
}

.item-title {
  position: absolute;
  line-height: 100rpx;
  font-size: 35rpx;
  color: #999;
}

.item-input {
  box-sizing: border-box;
  width: calc(100vw - 300rpx);
  margin-left: 200rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  border-bottom: 1rpx solid #999;
}


.bottombar {
  position: fixed;
  bottom: 0;
  height: 110rpx;
  width: 100%;
  background-color: rgba(254, 254, 254, 0.97);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  box-sizing: border-box;
  border-top:1rpx solid #EEEEEE;
}

.bottom-button {
  box-sizing: border-box;
  padding: 0rpx 0rpx 0rpx 0rpx;
  width: 100%;
}

.btn-style{
  width: 100%;
  font-size: 35rpx;
  line-height: 110rpx;
  height: 110rpx;
  border-radius: 0;
  color: #FFF;
  background-color: #AFCB21;
}

.btn-style::after {
  border-width: 0;
}