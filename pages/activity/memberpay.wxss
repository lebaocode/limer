/* pages/activity/memberpay.wxss */
.bg {
  background-color: #F6F6F6;
  height: calc(100vh);
  box-sizing: border-box;
}

.section {
  background-color: #FFF;
  width: 100%;
}

.line {
  height: 110rpx;
  padding: 0rpx 50rpx 0rpx 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.line-content {
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: right;
  width: calc(100vw - 300rpx)
}

.line-border-bottom {
  border-bottom: 1px solid #F6F6F6;
}

.icon-left {
  width: 30rpx;
  height: 30rpx;
}

.icon-right {
  width: 25rpx;
  height: 25rpx;
}

.line-text {
  line-height: 110rpx;
  font-size: 35rpx;
  color: #999;
  width: 200rpx;
}

.section-margin-top {
  margin-top: 20rpx;
}

.emp {
  color: red;
}


.bottombar {
  position: fixed;
  bottom: 0;
  height: 110rpx;
  width: 100%;
  background-color: rgba(254, 254, 254, 0.97);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  box-sizing: border-box;
  border-top:1rpx solid #EEEEEE;
}

.bottom-text {
  box-sizing: border-box;
  padding: 0rpx 50rpx;
  font-size: 30rpx;
  line-height: 110rpx;
  color: red;
  width: 60%;
  text-align: center;
}

.bottom-button {
  box-sizing: border-box;
  padding: 0rpx 0rpx 0rpx 0rpx;
  width: 40%;
}

.btn-style{
  width: 100%;
  font-size: 35rpx;
  line-height: 110rpx;
  height: 110rpx;
  border-radius: 0;
  color: #FFF;
  background-color: #AFCB21;
}

.btn-style::after {
  border-width: 0;
}


.btn-inactive-style{
  width: 100%;
  font-size: 35rpx;
  line-height: 110rpx;
  height: 110rpx;
  border-radius: 0;
  color: #AAA;
  background-color: #FEFEFE;
}

.btn-inactive-style::after {
  border-width: 0;
}