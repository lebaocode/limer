/* pages/activity/memberindex.wxss */
.page-title {
  font-size: 50rpx;
  line-height: 80rpx;
  margin: 30rpx 50rpx;
}

.img {
  width: 100%;
}

.content {
  margin-bottom: 0rpx;
}

.bottombar {
  position: fixed;
  bottom: 0;
  height: 110rpx;
  width: 100%;
  background-color: rgba(254, 254, 254, 0.97);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  box-sizing: border-box;
  border-top:1rpx solid #EEEEEE;
}

.bottom-text {
  box-sizing: border-box;
  padding: 0rpx 50rpx;
  font-size: 30rpx;
  line-height: 110rpx;
  color: #999;
  width: 60%;
  text-align: center;
}

.bottom-button {
  box-sizing: border-box;
  padding: 0rpx 0rpx 0rpx 0rpx;
  width: 100%;
}

.btn-style{
  width: 100%;
  font-size: 35rpx;
  line-height: 110rpx;
  height: 110rpx;
  border-radius: 0;
  color: #FFF;
  background-color: #AFCB21;
}

.btn-style::after {
  border-width: 0;
}