/* pages/my/myorder.wxss */
.bg {
  background-color: #F6F6F6;
  min-height: calc(100vh);
}


.section {
  background-color: #FFF;
  width: 100%;
}

.line {
  
  padding: 10rpx 30rpx 10rpx 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.line-border-bottom {
  border-bottom: 1px solid #F6F6F6;
}

.icon-left {
  width: 30rpx;
  height: 30rpx;
}

.icon-right {
  width: 25rpx;
  height: 25rpx;
}

.line-text {
  line-height: 60rpx;
  font-size: 30rpx;
  color: #000;
  margin-left: 20rpx;
  box-sizing: border-box;
}

.line-text-gray{
  color: #999;
  font-size: 25rpx;
}

.section-margin-top {
  margin-top: 20rpx;
}