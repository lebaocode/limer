/* pages/my/scorerule.wxss */
.whole-page {
  width: 100%;
  height: 100%;
  background-color: #F6F6F6;
}

.title {
  width: 100%;
  text-align: left;
  font-size: 35rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  padding: 30rpx 50rpx 20rpx 50rpx;
}

.section {
  width: 100%;
  height: 155rpx;
  background-color: #FFF;
  box-sizing: border-box;
  padding: 20rpx 50rpx;
  margin-bottom: 50rpx;
}

.desc {
  width: 100%;
  text-align: left;
  font-size: 35rpx;
  line-height: 50rpx;
  color: #000;
  box-sizing: border-box;
  padding: 0rpx 20rpx 10rpx 0rpx;
}

.score {
  width: 100%;
  text-align: left;
  font-size: 35rpx;
  line-height: 55rpx;
  color: #AFCB21;
}

.btn-style{
  position: absolute;
  right: 50rpx;
  top: 20rpx;
  text-align: center;

  width: 150rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  border-radius: 0;
  color: #FFF;
  background-color: #AFCB21;
}

.btn-style::after {
  border-width: 0;
}
