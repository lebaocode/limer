/* pages/my/index.wxss */
.bg {
  background-color: #F6F6F6;
  min-height: 100%;
}

.top-area {
  width: 100%;
  height: 460rpx;
  background-color: #7ABC22;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.user-logo image {
  border-radius: 75rpx;
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #F6F6F6;
}

.user-name {
  color: #FFF;
  width: 100%;
  text-align: center;
  font-size: 35rpx;
  line-height: 70rpx;
}

.user-data {
  display: flex;
  flex-direction: row;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx 0rpx 0rpx 0rpx;
}

.data-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: calc((100vw - 40rpx)/3);
}

.data-digit {
  color: #FFF;
  font-size: 30rpx;
  line-height: 70rpx;
}

.data-name {
  color: #FFF;
  font-size: 30rpx;
  line-height: 30rpx;
}

.section {
  background-color: #FFF;
  width: 100%;
}

.line {
  height: 110rpx;
  padding: 0rpx 30rpx 0rpx 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.line-border-bottom {
  border-bottom: 1px solid #F6F6F6;
}

.icon-left {
  width: 30rpx;
  height: 30rpx;
}

.icon-right {
  width: 25rpx;
  height: 25rpx;
}

.line-text {
  line-height: 110rpx;
  font-size: 30rpx;
  color: #000;
  margin-left: 20rpx;
  width: calc(100vw - 165rpx)
}

.section-margin-top {
  margin-top: 20rpx;
}