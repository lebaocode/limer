/* pages/donate/share.wxss */
.whole-page {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding:100rpx 50rpx;
}
.mask {
  width: 100%;
  height: 100%;
  opacity: 0.3;
  position : fixed;
  top: 0px;
  left: 0px;
  z-index: 100;
  background-color: #000;
}

.pic-area {
  width: 100%;
  z-index: 101;
  position : fixed;
  top: 0px;
  left: 0px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding:50rpx 80rpx;
}
.share-pic{
  width: 600px;
  height: 900px;
  position: absolute;
  top: 0;
  left: 99999rpx;
}

.real-pic {
  width: 100%;
}
.row-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  margin-top: 30rpx;
}
.close-icon {
  
  width: 80rpx;
  height: 80rpx;
  
}

.btn-style{
  margin-top: 50rpx;
  width: 350rpx;
  font-size: 35rpx;
  line-height: 110rpx;
  height: 110rpx;
  border-radius: 0;
  color: #FFF;
  background-color: #AFCB21;
}

.btn-style::after {
  border-width: 0;
  
}