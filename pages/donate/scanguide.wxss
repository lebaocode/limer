.para{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.title {
  padding: 100rpx 20rpx 10rpx 20rpx;
  text-align: center;
  font-size: 35rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}

.sample {
  width: 400rpx;
  height: 300rpx;
  margin-bottom: 50rpx;
}


.btn-style{
  width: calc(100vw - 100rpx);
  font-size: 35rpx;
  line-height: 100rpx;
  border-radius: 0;
  color: #FFF;
  background-color: #AFCB21;
}

.btn-style::after {
  border-width: 0;
  
}